= form_for @savage do |f|
  - if @savage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@savage.errors.count, "error")} prohibited this savage from being saved:"
      %ul
        - @savage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
