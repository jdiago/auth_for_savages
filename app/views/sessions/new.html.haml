.row
  - if flash[:alert]
    %p.notice
      = flash[:alert]

  = form_tag do
    .row
      .small-3.columns
        = label_tag :name, 'Name:', :class => 'right inline'
      .small-9.columns
        = text_field_tag :name
    .row
      .small-3.columns
        = label_tag :password, 'Password:', :class => 'right inline'
      .small-9.columns
        = password_field_tag :password
    .row
      .small-9.small-offset-3.columns
        = submit_tag 'Log in'
